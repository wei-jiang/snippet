docker run -d \
    -e ROOT_URL=http://localhost:8080 \
    -e MONGO_URL=mongodb://localhost:27017 \
    -e MONGO_OPLOG_URL=mongodb://localhost \
    -v /Users/piao/experiment/meteor_test/dist:/bundle \
    -p 8080:80 \
    meteorhacks/meteord:base
    
